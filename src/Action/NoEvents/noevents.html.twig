{% extends "layout.html.twig" %}

{% block content %}
    <div class="maincontent">
        <table class="width98">
            <tr>
                <td>
                    <div class="center">
                        <h1>{{ header }}</h1>

                        {% for event in events %}
                            <h3>{{ event.name | raw }}, {{ event.location }}<br>
                                {{ event.dates }}</h3>
                        {% endfor %}
                    </div>
                    <hr>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="center no-content">
                        {{ msg | raw }}
                    </div>
                    {{ content | raw }}

                </td>
            </tr>

        </table>
    </div>
{% endblock %}
