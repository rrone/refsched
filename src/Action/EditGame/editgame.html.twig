{% extends "layout.html.twig" %}

{% block head %}
{% endblock %}

{% block content %}

    <h2 align="center">
        {{ view.title | raw }}<br>
        {{ view.location | raw }}<br>
        {{ view.dates | raw }}
    </h2>
    <h3 align="center">{{ view.description | raw }}</h3>

    <span class="center" style="color: #FF0000">{{ view.message | raw }}</span>

    {{ view.topmenu | raw }}

    {{ view.content | raw }}

    {{ view.menu | raw }}

{% endblock %}

{% block script %}

    <script type="text/javascript" src="{{ base_url() }}/js/jquery.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="{{ base_url() }}/js/jquery.datetimepicker.min.js" charset="UTF-8"></script>
    <script type="text/javascript">
        $('.form_date').datetimepicker({
            datepicker: true,
            timepicker: false,
            format: 'hh:ii',
        });
        $('.form_time').datetimepicker({
            datepicker: false,
            timepicker: true,
            format: 'yyyy-mm-dd',
        });
    </script>

{% endblock %}