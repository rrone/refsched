{% extends "layout.html.twig" %}

{% block content %}
    <div class="col-md-10 col-md-offset-1" xmlns="http://www.w3.org/1999/html">
        <div class="panel panel-default">
            <div class="panel-heading center">
                <h1>Schedule Import</h1>
            </div>


            <div class="col-md-8 col-md-offset-2">
                <form action="{{ view.action | raw }}" method="post" enctype="multipart/form-data" name="form1"
                      id="form1">
                    <fieldset>
                        <div class="form-group">
                            <div class="col-md-12">
                                {% if (view.messageStyle != null) %}
                                    <br/>
                                    <p class="center" style={{ view.messageStyle }}> {{ view.message | raw }}</p>
                                {% else %}
                                    <br/>
                                    <br/>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 control-label text-right" for="uploadfile">Select a CSV file to
                                upload:</label>
                            <div class="col-md-5">
                                <input name="uploadfile" type="file" id="uploadfile" accept=".csv, text/csv" />
                            </div>
                            <div class="col-md-12 col-md-offset-4">
                                <button id="test" name="Test" class="btn btn-xs btn-default">Test Upload</button>
                                <button id="upload" name="Upload" class="btn btn-xs btn-primary">Upload File
                                </button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <!-- Button -->
                <div class="panel panel-default no-border">
                    <div class="form-group">
                        <form class="form-horizontal user-update" method="post" action="{{ view.done | raw }}">
                            <fieldset>
                                <div class="col-md-12">
                                    <button id="done" name="done" class="btn btn-inverse right">Done</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}