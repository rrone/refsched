{% extends "layout.html.twig" %}

{% block content %}
    <table class="maincontent width98">
        <tr>
            <td class="contentarea center">

                <div class="center">
                    <h1>{{ header }}</h1>

                    {% for event in events %}
                        <h3>{{ event.name | raw }}, {{ event.location }}<br>
                            {{ event.dates }}</h3>
                    {% endfor %}
                </div>
                <hr>
            </td>
        </tr>
        <tr>
            <td>
                <p class="center"><span style="color: #FF0000">{{ message | raw }}</span></p>
                {{ content | raw }}

            </td>
        </tr>

    </table>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        $(function () {
            $("#event").trigger("change");
        });

        $("#event").change(function () {
            let label = $("#event").find("option:selected").val().replace(/ /g, '_');

            $("#user").load("{{ users }}?" + label);
        });

    </script>
{% endblock %}